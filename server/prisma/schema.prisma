generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     String   @default("admin") // Only one admin
}

model Event {
  id               Int      @id @default(autoincrement())
  fullName         String
  email            String
  phone            String
  title            String   // or you can store a short event name
  start            DateTime
  end              DateTime
  isVerified       Boolean  @default(false)
  verificationCode String?  // OTP for verifying the event
  // you can add a "verificationExpiresAt" if you want to expire OTPs
}
